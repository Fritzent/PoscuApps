<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WarnaPutihDua"
    tools:context=".TambahTransaksi">

    <ImageView
        android:id="@+id/GambarTambahkanTransaksi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custome_shape_tambah_transaksi"
        android:contentDescription="@string/tambahkan_transaksi"
        />
    <RelativeLayout
        android:id="@+id/TempatTambahkanTransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/custome_shape_datadiri"
        android:layout_marginTop="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp"
        >
        <TextView
            android:id="@+id/InputNamaPelanggan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:text="@string/nama_pelanggan"
            android:textSize="14sp"
            android:textColor="@color/WarnaHitam"
            android:fontFamily="@font/sfposcutext"
            />
        <EditText
            android:id="@+id/TempatInputNamaPelanggan"
            android:layout_below="@id/InputNamaPelanggan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custome_shape_tombol_input_login"
            android:fontFamily="@font/sfposcutext"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/WarnaHitamTiga"
            android:textSize="18sp"
            android:hint="@string/contoh_sisca_br_tarigan"
            android:autofillHints="@string/contoh_sisca_br_tarigan"
            />
        <TextView
            android:id="@+id/InputNomorPonselPelanggan"
            android:layout_below="@id/TempatInputNamaPelanggan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:text="@string/nomor_ponsel"
            android:textSize="14sp"
            android:textColor="@color/WarnaHitam"
            android:fontFamily="@font/sfposcutext"
            />
        <EditText
            android:id="@+id/TempatInputNomorPonselPelanggan"
            android:layout_below="@id/InputNomorPonselPelanggan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custome_shape_tombol_input_login"
            android:fontFamily="@font/sfposcutext"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/WarnaHitamTiga"
            android:textSize="18sp"
            android:hint="@string/contoh_62_857_6340_2988"
            android:autofillHints="@string/contoh_62_857_6340_2988"
            />
        <TextView
            android:id="@+id/InputKodeRakSimpan"
            android:layout_below="@id/TempatInputNomorPonselPelanggan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:text="@string/kode_rak_simpan"
            android:textSize="14sp"
            android:textColor="@color/WarnaHitam"
            android:fontFamily="@font/sfposcutext"
            />
        <EditText
            android:id="@+id/TempatInputKodeRakSimpan"
            android:layout_below="@id/InputKodeRakSimpan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custome_shape_tombol_input_login"
            android:fontFamily="@font/sfposcutext"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/WarnaHitamTiga"
            android:textSize="18sp"
            android:hint="@string/contoh_ocean_nomor_4b"
            android:autofillHints="@string/contoh_ocean_nomor_4b"
            />
        <TextView
            android:id="@+id/InputPewangiBaju"
            android:layout_below="@id/TempatInputKodeRakSimpan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:text="@string/pewangi_baju"
            android:textSize="14sp"
            android:textColor="@color/WarnaHitam"
            android:fontFamily="@font/sfposcutext"
            />
        <EditText
            android:id="@+id/TempatInputPewangiBaju"
            android:layout_below="@id/InputPewangiBaju"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custome_shape_tombol_input_login"
            android:fontFamily="@font/sfposcutext"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/WarnaHitamTiga"
            android:textSize="18sp"
            android:hint="@string/contoh_ya_parfum_downy"
            android:autofillHints="@string/contoh_ya_parfum_downy"
            />
        <Button
            android:id="@+id/TombolDiTambahkanTransaksi"
            android:layout_below="@id/TempatInputPewangiBaju"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custome_shape_tombol_masuk"
            android:fontFamily="@font/sfposcutext"
            android:text="@string/selanjutnya"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/WarnaBiruTua"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>