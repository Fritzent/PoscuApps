<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WarnaBiru"
    tools:context=".DataKaryawan">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/GambarKaryawan"
            android:layout_width="122dp"
            android:layout_height="119dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            android:src="@drawable/datakaryawan"
            android:contentDescription="@string/gambarkaryawan"
            />
        <TextView
            android:id="@+id/PetunjukIsiDataKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/GambarKaryawan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="17dp"
            android:text="@string/silahkan_isi_data_karyawan_anda"
            android:textColor="@color/WarnaPutih"
            android:textSize="18sp"
            android:fontFamily="@font/sfposcutext"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                app:layout_constraintTop_toBottomOf="@id/PetunjukIsiDataKaryawan"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="34dp"
                android:background="@drawable/custome_shape_datakaryawan"
                >
                <TextView
                    android:id="@+id/GarisDiDataKaryawan"
                    android:layout_width="40dp"
                    android:layout_height="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/custome_shape_line_dua"
                    />
                <TextView
                    android:id="@+id/DataKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/data_karyawan_1"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfposcutext"
                    android:textStyle="bold"
                    android:textColor="@color/WarnaBiruTua"
                    />
                <TextView
                    android:id="@+id/InputNamaKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/sfposcutext"
                    android:text="@string/nama"
                    android:textColor="@color/WarnaAbuAbuDua"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/DataKaryawan"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:id="@+id/TempatInputNamaKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custome_shape_tombol_input_login"
                    android:fontFamily="@font/sfposcutext"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/WarnaHitamTiga"
                    android:textSize="18sp"
                    android:hint="@string/masukkan_nama_karyawan"
                    android:autofillHints="@string/masukkan_nama_karyawan"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/InputNamaKaryawan" />
                <TextView
                    android:id="@+id/InputNomorPonsel"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/sfposcutext"
                    android:text="@string/nomor_ponsel"
                    android:textColor="@color/WarnaAbuAbuDua"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TempatInputNamaKaryawan" />
                <EditText
                    android:id="@+id/TempatInputNomorPonsel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custome_shape_tombol_input_login"
                    android:fontFamily="@font/sfposcutext"
                    android:inputType="phone"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/WarnaHitamTiga"
                    android:textSize="18sp"
                    android:hint="@string/masukkan_nomor_ponsel"
                    android:autofillHints="@string/masukkan_nomor_ponsel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/InputNomorPonsel" />
                <TextView
                    android:id="@+id/InputEmailKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/sfposcutext"
                    android:text="@string/email"
                    android:textColor="@color/WarnaAbuAbuDua"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TempatInputNomorPonsel" />
                <EditText
                    android:id="@+id/TempatInputEmailKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custome_shape_tombol_input_login"
                    android:fontFamily="@font/sfposcutext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/WarnaHitamTiga"
                    android:textSize="18sp"
                    android:hint="@string/masukkan_email"
                    android:autofillHints="@string/masukkan_email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/InputEmailKaryawan" />
                <TextView
                    android:id="@+id/InputPasswordKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/sfposcutext"
                    android:text="@string/password"
                    android:textColor="@color/WarnaAbuAbuDua"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TempatInputEmailKaryawan" />
                <EditText
                    android:id="@+id/TempatInputPasswordKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/custome_shape_tombol_input_login"
                    android:fontFamily="@font/sfposcutext"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/WarnaHitamTiga"
                    android:textSize="18sp"
                    android:hint="@string/masukkan_password"
                    android:autofillHints="@string/masukkan_password"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/InputPasswordKaryawan" />
                <Button
                    android:id="@+id/TombolDiDataKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:layout_constraintTop_toBottomOf="@id/TempatInputPasswordKaryawan"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfposcutext"
                    android:text="@string/selanjutnya"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/WarnaBiruTua"
                    android:textStyle="bold"
                    android:background="@drawable/custome_shape_tombol_masuk"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>