<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WarnaPutihDua"
    tools:context=".Profile">

    <RelativeLayout
        android:id="@+id/TempatProfileUser"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/WarnaBiru"
        >
        <LinearLayout
            android:id="@+id/TempatGambarProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="11dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custome_shape_profile"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile"
                android:contentDescription="@string/gambarprofileuser"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/TempatUserName"
            android:layout_below="@id/TempatGambarProfile"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/selena_gomgom"
            android:textSize="18sp"
            android:textColor="@color/WarnaPutih"
            android:fontFamily="@font/sfposcutext"
            />
        <TextView
            android:id="@+id/NamaLaundrynya"
            android:layout_below="@id/TempatUserName"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="@string/jeje_laundry"
            android:textSize="16sp"
            android:textColor="@color/WarnaPutih"
            android:fontFamily="@font/sfposcutext"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/MenuEditProfile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/TempatProfileUser"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/edit_profil"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        android:drawableEnd="@drawable/custome_arrow_right_icon"
        />
    <TextView
        android:id="@+id/MenuSetPrinter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuEditProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/set_printer"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        android:drawableEnd="@drawable/custome_arrow_right_icon"
        />
    <TextView
        android:id="@+id/MenuPengaturan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuSetPrinter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/pengaturan"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        android:drawableEnd="@drawable/custome_arrow_right_icon"
        />
    <TextView
        android:id="@+id/MenuKeluar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuPengaturan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:text="@string/keluar"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        android:drawableEnd="@drawable/custome_arrow_right_icon"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/WarnaPutih"
        app:itemBackground="@color/WarnaPutih"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_navigation"
        />

</androidx.constraintlayout.widget.ConstraintLayout>