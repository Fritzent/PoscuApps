<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WarnaPutih"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LayoutTop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/WarnaBiru"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/ImageUserAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/welcome"
            android:contentDescription="@string/gambarselamatdatang"
            />
    </LinearLayout>
    <Button
        android:id="@+id/TombolMasuk"
        android:layout_width="335dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/LayoutTop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/masuk"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:textColor="@color/WarnaHitam"
        android:fontFamily="@font/sfposcutext"
        android:background="@drawable/custome_shape_tombol_masuk"
        />
    <Button
        android:id="@+id/TombolDaftar"
        android:layout_width="335dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/TombolMasuk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        android:text="@string/daftar"
        android:textSize="18sp"
        android:textColor="@color/WarnaBiru"
        android:textAllCaps="true"
        android:fontFamily="@font/sfposcutext"
        android:background="@drawable/custome_shape_tombol_daftar"
        />

    <TextView
        android:id="@+id/GarisSatu"
        android:layout_width="45dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toBottomOf="@id/TombolDaftar"
        app:layout_constraintRight_toLeftOf="@id/PilihAtau"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custome_shape_line"
        />

    <TextView
        android:id="@+id/PilihAtau"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:layout_constraintTop_toBottomOf="@id/TombolDaftar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:text="@string/atau"
        android:textSize="17sp"
        android:textColor="@color/WarnaBiruTua"
        android:textAllCaps="false"
        android:fontFamily="@font/sfposcutext"
        />

    <TextView
        android:id="@+id/GarisDua"
        android:layout_width="45dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toBottomOf="@id/TombolDaftar"
        app:layout_constraintLeft_toRightOf="@id/PilihAtau"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/custome_shape_line"
        />

    <Button
        android:id="@+id/TombolGoogle"
        android:layout_width="335dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/PilihAtau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:text="@string/lanjutkan_dengan_google"
        android:textSize="16sp"
        android:textColor="@color/WarnaOren"
        android:textAllCaps="false"
        android:fontFamily="@font/sfposcutext"
        android:background="@drawable/custome_shape_tombol_google"
        android:drawableStart="@drawable/ic_search"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>