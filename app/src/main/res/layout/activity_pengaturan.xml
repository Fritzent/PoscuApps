<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WarnaPutihDua"
    tools:context=".Pengaturan">

    <TextView
        android:id="@+id/MenuTentangPoscu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/tentang_poscu"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        />
    <TextView
        android:id="@+id/MenuBagikanAplikasi"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuTentangPoscu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/bagikan_aplikasi"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        />
    <TextView
        android:id="@+id/MenuBantuan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuBagikanAplikasi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/bantuan"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        />
    <TextView
        android:id="@+id/MenuSyaratdanKetentuan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuBantuan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/syarat_dan_ketentuan"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        />
    <TextView
        android:id="@+id/MenuKebijakanPrivasi"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuSyaratdanKetentuan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/kebijakan_privasi"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        />
    <TextView
        android:id="@+id/MenuHapusAkun"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/MenuKebijakanPrivasi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="@string/hapus_akun"
        android:textSize="18sp"
        android:textColor="@color/WarnaHitam"
        android:background="@drawable/custome_shape_pengaturan_profile"
        />

</androidx.constraintlayout.widget.ConstraintLayout>